<h2><%= t ".title" %></h2>
<p class="center"><%= t ".content" %></p>
<p class="notice"><%= notice %></p>
<div class="">
  <%= form_tag root_path, method: :get, class: "form-inline",
    enforce_utf8: false do %>
    <%= text_field_tag "query", params[:query], class: "form-control",
      id: "autocomplete", data: {goiy: Product.pluck(:title).uniq} %>
    <%= submit_tag "Search" %>
  <% end %>
</div>
<div class="suggest">
  <% if available_suggestion? %>
    <span><%= t ".did_you_mean" %></span>
    <%=  @products.suggestions[0] %>
  <% end %>
</div>
<h1>
  <%= t ".all_products" %>
</h1>
<div class="center">
  <div class="row">
    <% @products.each do |product| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(product.image_product.url), product_path(product) %>
          <div class="caption">
            <h3><%= product.title %></h3>
            <p><%= number_to_currency product.price %></p>
            <p><%= t "quality" %></p>
            <div class="readonly-star">
              <p><%= rating_for product, Settings.rate.quality,
                star: Settings.rate.star_number,readOnly: true,
                enable_half: true %></p>
            </div>
            <p><%= t ".created_by " "#{product.user.name}" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
<%= will_paginate %>
