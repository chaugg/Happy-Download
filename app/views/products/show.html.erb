<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-6">
    <div class="thumbnail">
      <%= image_tag @product.image_product.url{:medium} %>
    </div>
  </div>
  <div class="col-md-6">
    <h3><%= @product.title %></h3>
    <p><%= t "quality" %><%= rating_for @product, Settings.rate.quality,
        star: Settings.rate.star_number, enable_half: true,
        disable_after_rate: false %></p>
    <p><%= number_to_currency @product.price %></p>
    <p><%= link_to t("link_preview"), @product.link_preview %></p>
    <%= render "wishlist_form", product: @product %>
    <p><%= @product.content %></p>
    <% if user_product @product %>
      <p><%= link_to t("edit"), edit_product_path(@product) %></p>
    <% else %>
      <p>
        <%= link_to t("buy_now"), new_product_order_detail_path(@product) %>
      </p>
    <% end %>
    <table class="div-create">
      <thead>
        <tr>
          <th><%= t ".feedback" %></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <%= render @product.feedbacks %>
      </tbody>
    </table>
    <section>
      <div class="ajax-form-create">
        <%= render "feedbacks/feedback_form", feedback: @feedback,
          product: @product %>
      </div>
    </section>
    <%= link_to t("back"), root_path %>
    <br>
  </div>
</div>
